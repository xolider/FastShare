<Page x:Class="FastShare.UI.WPF.Pages.ReceivePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FastShare.UI.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="WhiteSmoke">

    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="20">
        <TextBlock FontSize="36" FontWeight="SemiBold">
            <Run Text="Your code:"/>
            <Run Text="{Binding Code}"/>
        </TextBlock>

        <TextBlock Margin="0,30,0,0" Text="{Binding Status}"/>
        <ProgressBar IsIndeterminate="{Binding IsWaitingForTransfert}" Value="{Binding ProgressPercent}"/>
        <TextBlock Margin="0,30,0,0" TextAlignment="Center" Visibility="{Binding ShowInExplorerVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Hyperlink Command="{Binding ShowFileInExplorerCommand}">Show in explorer</Hyperlink>
        </TextBlock>
    </StackPanel>
</Page>
