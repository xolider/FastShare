<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastShare.UI.Mobile.Forms.MainPage"
             Title="FastShare">

    <StackLayout Orientation="Vertical" VerticalOptions="Center" Spacing="20" Padding="20">
        <Image Source="fastshare.png"/>
        <Button Text="Receive file" Command="{Binding ReceiveCommand}"/>
        <Button Text="Send file" Command="{Binding SendCommand}"/>
    </StackLayout>

</ContentPage>
